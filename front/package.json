{
  "name": "drug-record-applications-finder",
  "description": "Search for drug record applications submitted to FDA for approval.",
  "version": "0.0.1",
  "license": "MIT",
  "private": false,
  "author": {
    "name": "Timothy DIGUIET"
  },
  "homepage": "https://github.com/QTimort/drug-record-application-finder",
  "repository": {
    "type": "git",
    "url": "git@github.com:QTimort/drug-record-application-finder.git"
  },
  "engines": {
    "node": ">=16.16.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "install:playwright": "npx playwright install",
    "test:unit": "vitest --run --environment jsdom --root src/",
    "test:e2e": "playwright test --reporter=line",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "npm run lint:eslint && npm run lint:stylelint && npm run lint:prettier",
    "lint:prettier": "prettier . -w -u",
    "lint:eslint": "eslint . --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint --max-warnings=0",
    "lint:stylelint": "stylelint \"./**/*.{css,sass,scss,htm,html,vue}\" --fix --cache-location ./node_modules/.vite/vite-plugin-stylelint"
  },
  "dependencies": {
    "@mdi/font": "7.0.96",
    "core-js": "^3.8.3",
    "mande": "^2.0.3",
    "pinia": "^2.0.29",
    "roboto-fontface": "*",
    "vue": "^3.2.45",
    "vue-router": "^4.1.6",
    "vuetify": "^3.0.0",
    "webfontloader": "^1.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.28.1",
    "@rushstack/eslint-patch": "^1.1.4",
    "@types/jsdom": "^20.0.1",
    "@types/node": "^18.11.12",
    "@types/webfontloader": "^1.6.35",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitest/coverage-c8": "^0.27.2",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/test-utils": "^2.2.6",
    "@vue/tsconfig": "^0.1.3",
    "autoprefixer": "^10.4.12",
    "eslint": "^8.32.0",
    "eslint-config-google": "^0.14.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^39.6.6",
    "eslint-plugin-tsdoc": "^0.2.17",
    "eslint-plugin-vue": "^9.9.0",
    "eslint-plugin-vuejs-accessibility": "^2.1.0",
    "eslint-plugin-vuetify": "^2.0.0-beta.2",
    "eslint-plugin-yaml": "^0.5.0",
    "jsdom": "^20.0.3",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "sass": "^1.55.0",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-recommended-scss": "^8.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-order": "^6.0.1",
    "typescript": "~4.8.4",
    "vite": "^4.0.0",
    "vite-plugin-checker": "0.5.3",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-vuetify": "^1.0.0-alpha.12",
    "vitest": "^0.25.6",
    "vue-eslint-parser": "^9.1.0",
    "vue-tsc": "^1.0.12",
    "npx": "^10.2.2"
  },
  "lint-staged": {
    "*.{js,ts,json,jsonc,json5,yaml,yml,toml,yml,yaml,vue,htm,html,md}": "eslint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint",
    "*.{css,sass,scss,vue,htm,html}": "stylelint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-stylelint",
    "*": "prettier -w -u"
  }
}
